<%- include('common/head'); -%>
</head>

<body>
<h2><%= title %></h2>
<div class="create">
    <div class="create-form">
        <h2>Enter Details</h2>
        <form action="/create" method="POST" enctype="multipart/form-data">
            <label for="name">Plant Name: *</label><br>
            <input type="text" id="name" name="name" required><br>

            <label for="image">Upload Image: *</label><br>
            <input type="file" id="image" name="myImg" accept="image/*" required><br>

            <label for="description">Description: *</label><br>
            <input type="text" id="description" name="description" required><br>

            <label for="location">Location: *</label><br>
            <input type="text" id="location" name="location" required><br>

            <label for="username">Your Nickname: *</label><br>
            <input type="text" id="username" name="username" required><br>

            <label>Characteristics:</label><br>
            <input type="checkbox" id="fruit" name="characteristics" value="fruit">
            <label for="fruit">Fruit</label><br>
            <input type="checkbox" id="seeds" name="characteristics" value="seeds">
            <label for="seeds">Seeds</label><br>
            <input type="checkbox" id="leaves" name="characteristics" value="leaves">
            <label for="leaves">Leaves</label><br>
            <input type="checkbox" id="flowers" name="characteristics" value="flowers">
            <label for="flowers">Flowers</label><br>

            <label for="colour">Colour:</label><br>
            <select id="colour" name="colour" >
                <option value="red">Red</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
                <option value="yellow">Yellow</option>
            </select><br>

            <label for="sunExposure">Sun Exposure:</label><br>
            <select id="sunExposure" name="sunExposure">
                <option value="full">Full Sun</option>
                <option value="partial">Partial Sun</option>
                <option value="shade">Shade</option>
            </select><br>

            <label for="status">Status: *</label><br>
            <select id="status" name="status" required>
                <option value="Completed">Completed</option>
                <option value="In-progress">In-progress</option>
            </select><br><br>

            <input type="submit" value="Upload">
        </form>
    </div>
    <div class="create-preview">
        <h2>Preview</h2>
        <div id="preview">
            <img class="image-preview" id="previewImage" src="#" alt="Preview Image">
            <p id="previewName"></p>
            <p id="previewLocation"></p>
        </div>
    </div>
</div>
<script src="/javascripts/preview.js"></script>
</body>

<%- include('common/footer'); -%>

